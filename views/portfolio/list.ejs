<!-- Including partials -->
<%- include('../partials/header.ejs') %>
<%- include('../partials/nav_bar.ejs') %>
 
<main class="container">
    <br>
    <a href="/portfolio/add" class="btn btn-primary"><i class="fa-solid fa-plus fa-lg"></i> Add Project</a>
    <br>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Company</th>
              <th scope="col">Project Information</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (let index = 0; index < ProjectsList.length; index++) { %>
                <tr>
                    <td><%= ProjectsList[index].name %></td>
                    <td><%= ProjectsList[index].company %></td>
                    <td><%= ProjectsList[index].information %></td>
                    <td>
                      <a href="/portfolio/edit/<%= ProjectsList[index].id %>" class="btn btn-info btn-sm"> <i class="fa-solid fa-file-pen fa-lg"></i> Edit</a>
                    </td>
                    <td>
                      <a href="/portfolio/delete/<%= ProjectsList[index].id %>" class="btn btn-danger btn-sm"> <i class="fa-sharp fa-light fa-trash fa-lg"></i> Delete </a>
                    </td>
                </tr>
            <% } %>
          </tbody>
    </table>
</main>

<%- include('../partials/footer.ejs') %>